{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A Spark application configuration",
  "type": "object",
  "extends": {
    "type": "object",
    "existingJavaType": "io.radanalytics.operator.common.EntityInfo"
  },
  "properties": {
    "deps": {
      "type": "object",
      "properties": {
        "jars": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pyFiles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "jarsDownloadDir": "string",
        "filesDownloadDir": "string",
        "downloadTimeout": {
          "type": "integer",
          "default": 60,
          "minimum": 0
        },
        "maxSimultaneousDownloads": {
          "type": "integer",
          "default": 5,
          "minimum": 0
        }
      }
    },
    "driver": {
      "$ref": "#/definitions/DriverSpec"
    },
    "executor": {
      "$ref": "#/definitions/ExecutorSpec"
    },
    "image": {
      "type": "string",
      "default": "quay.io/jkremser/openshift-spark:2.3-latest"
    },
    "mainApplicationFile": {
      "type": "string"
    },
    "mainClass": {
      "type": "string"
    },
    "arguments": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "default": "cluster",
      "enum": ["client", "cluster"]
    },
    "restartPolicy": {
      "type": "string",
      "default": "Always",
      "enum": ["Always", "OnFailure", "Never"]
    },
    "imagePullPolicy": {
      "type": "string",
      "default": "IfNotPresent",
      "enum": ["IfNotPresent", "Always", "Never"]
    },
    "type": {
      "type": "string",
      "default": "Java",
      "enum": ["Java", "Scala", "Python", "R"]
    },
    "sleep": {
      "type": "integer",
      "default": 31536000,
      "minimum": 0
    },
    "labels": {
      "$ref": "#/definitions/Labels"
    },
    "env": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "value": { "type": "string" }
        },
        "required": ["name", "value"]
      }
    },
    "sparkConfigMap": {"type": "string"}
  },
  "required": [ "mainApplicationFile" ],
  "definitions": {
    "CommonNodeSpec": {
      "type": "object",
      "javaType": "io.radanalytics.types.CommonNodeSpec",
      "properties": {
        "memory": {
          "type": "string",
          "default": "512m"
        },
        "memoryOverhead": "string",
        "image": {
          "type": "string",
          "default": "#/properties/image/default"
        },
        "labels": {
          "$ref": "#/definitions/Labels"
        }
      }
    },
    "DriverSpec": {
      "type": "object",
      "extends": {
        "$ref": "#/definitions/CommonNodeSpec"
      },
      "properties": {
        "cores": {
          "type": "string",
          "default": "0.1"
        },
        "coreLimit": {
          "type": "string",
          "default": "200m"
        },
        "serviceAccount": {
          "type": "string",
          "default": "spark-operator"
        }
      }
    },
    "ExecutorSpec": {
      "type": "object",
      "extends": {
        "$ref": "#/definitions/CommonNodeSpec"
      },
      "properties": {
        "instances": {
          "type": "integer",
          "default": 1,
          "minimum": 0
        },
        "cores": {
          "type": "string",
          "default": "1"
        },
        "coreLimit": {
          "type": "string",
          "default": "1000m"
        }
      }
    },
    "Labels": {
      "type": "object",
      "existingJavaType" : "java.util.Map<String,String>",
      "properties": {
        "type": "string",
        "pattern": "([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9]"
      }
    }
  }
}
